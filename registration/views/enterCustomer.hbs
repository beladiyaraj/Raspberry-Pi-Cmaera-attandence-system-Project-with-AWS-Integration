<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="images/gatexFavicon.png" rel="icon" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      @import
      url('https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
    </style>

    <link rel="stylesheet" href="/css/enterCustomer.css" />
    <script type="text/javascript" src="/js/enterCustomer.js"></script>

    <title>New Customer | Gatex</title>
  </head>

  <body>
    <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-12 col-lg-10">
            <div class="wrap">
              <h3 class="mb-4" id="header">Enter Customer Details</h3>
              <form class="signin-form" id="emailForm">
                <div class="form-group mb-3">
                  <label class="label" for="email">Admin Email</label>
                  <input
                    type="email"
                    name="email"
                    id="email"
                    class="form-control"
                    placeholder="Enter Admin Email"
                    required
                  />
                </div>
                <div class="form-group mb-3">
                  <label class="label" for="adminPassword">Admin Password*</label>
                  <input
                    type="password"
                    name="adminPassword"
                    id="adminPassword"
                    class="form-control"
                    placeholder="Current Password"
                    required
                  />
                </div>
                <div class="form-group">
                  <button
                    type="button"
                    class="form-control btn btn-primary rounded submit px-3"
                    id="verifyEmail"
                  >
                    Verify Details
                  </button>
                </div>
              </form>
              <form
                class="signin-form"
                id="customerForm"
                style="display: none;"
              >
                <div class="form-grid">
                  <div class="form-group mb-3">
                    <label class="label" for="customer_id">Customer ID*</label>
                    <input
                      type="text"
                      name="customer_id"
                      id="customer_id"
                      class="form-control"
                      placeholder="Customer ID"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label class="label" for="customer_login">New Customer Login
                      ID*</label>
                    <input
                      type="email"
                      name="customer_login"
                      id="customer_login"
                      class="form-control"
                      placeholder="New Customer Login ID"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label class="label" for="customer_password">New Customer
                      Login Password*</label>
                    <input
                      type="text"
                      name="customer_password"
                      id="customer_password"
                      class="form-control"
                      placeholder="New Customer Login Password"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label class="label" for="device_id">Associated Device IDs*<br
                      />Enter In this Format :
                      <b>["device_id1","device_id2",....]</b></label>
                    <input
                      type="text"
                      name="device_id"
                      id="device_id"
                      class="form-control"
                      placeholder="Associated Device IDs"
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label class="label" for="customer_name">Customer Name</label>
                    <input
                      type="text"
                      name="customer_name"
                      id="customer_name"
                      class="form-control"
                      placeholder="Customer Name"
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label class="label" for="customer_type">Customer Type</label>
                    <input
                      type="text"
                      name="customer_type"
                      id="customer_type"
                      class="form-control"
                      placeholder="Customer Type"
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label class="label" for="customer_address">Customer Address</label>
                    <input
                      type="text"
                      name="customer_address"
                      id="customer_address"
                      class="form-control"
                      placeholder="Customer Address"
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label class="label" for="contact_person_name">Contact
                      Person Name</label>
                    <input
                      type="text"
                      name="contact_person_name"
                      id="contact_person_name"
                      class="form-control"
                      placeholder="Contact Person Name"
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label class="label" for="contact_person_emailID">Contact
                      Person EmailID</label>
                    <input
                      type="text"
                      name="contact_person_emailID"
                      id="contact_person_emailID"
                      class="form-control"
                      placeholder="Contact Person EmailID"
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label class="label" for="contact_person_phone">Contact
                      Person Phone</label>
                    <input
                      type="text"
                      name="contact_person_phone"
                      id="contact_person_phone"
                      class="form-control"
                      placeholder="Contact Person Phone"
                    />
                  </div>
                </div>
                <div class="form-group">
                  <button
                    type="submit"
                    class="form-control btn btn-primary rounded submit px-3"
                    id="enterCustomerButton"
                  >
                    Enter Customer
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>

</html>